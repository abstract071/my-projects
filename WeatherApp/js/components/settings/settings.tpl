<div class="options">
    <div class="description">
        <span class="degrees celsius active" data-identifier="celsius">&deg;C</span>
        <span class="edge">|</span>
        <span class="degrees fahrenheit" data-identifier="fahrenheit">&deg;F</span>
        <span class="icon-settings"></span>
    </div>

    <div class="options-range">
        <label for="day-range">
            <span>show weather for</span>
            <input type="text" id="options-days" readonly value="7">
            <span>days</span>
        </label>
        <div id="day-range">

        </div>
    </div>

    <div class="options-range">
        <label for="update-time-range">
            <span>update weather every</span>
            <input type="text" id="options-minutes" readonly value="15">
            <span>min</span>
        </label>
        <div id="update-time-range">

        </div>
    </div>
</div>